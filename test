# Initialize layers in the script
html_template += """
        var currentLayer;
"""

# Add initialization for each layer
for col in columns[3:]:
    avg_col_name = f'avg_{col.split()[3].replace("(", "").replace(")", "").lower()}'
    html_template += f"""
        if (!currentLayer) {{
            currentLayer = layer_{avg_col_name};
            currentLayer.addTo(map);
        }}
    """
